<div class="card">
    <h1 class="title">@Title</h1>
    <div class="subtitle">@SubTitle</div>
    <div class="content">@ChildContent</div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string SubTitle { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}